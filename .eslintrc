{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "prettier"
  ],
  "env": {
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "react/prop-types": [2, {
      "ignore": ["children"]
    }],
    "space-before-function-paren": 0,
    "react/jsx-boolean-value": 0,
    "object-curly-spacing": [
      2,
      "always"
    ],
    "semi": [
      2,
      "always"
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "quotes": [
      2,
      "double"
    ]
  }
}